                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Flag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortofRegistry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassengerCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossRegisterTonnage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeadweightTonnage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OverallLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxSpeed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MainPageImage)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="EditFleet" asp-route-id="@item.Id">Edit</a>
                    @*<a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                    <a class="btn btn-danger" asp-action="DeleteFleet" asp-route-id="@item.Id">Delete</a>
